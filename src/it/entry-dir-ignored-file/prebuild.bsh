import oe.maven.plugins.revision.IntegrationTestHelper;

try {
    if ( IntegrationTestHelper.getProperty( basedir, "src/test/resources", "svn:ignore" ).contains( "ignored.txt" ) ) {
        return IntegrationTestHelper.addFile( basedir, "src/test/resources/ignored.txt", false );
    } else {
        System.out.println( "set svn:ignore=ignored.txt on src/test/resources" );
        return false;
    }
} catch ( Throwable t ) {
    t.printStackTrace();
    return false;
}
